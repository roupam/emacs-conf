(defun mc-dark ()
  (interactive)
  (color-theme-install
   '(mc-dark
      ((background-color . "#1f2442")
      (background-mode . light)
      (border-color . "#111f4a")
      (cursor-color . "#979aa5")
      (foreground-color . "#9397a9")
      (mouse-color . "black"))
     (fringe ((t (:background "#111f4a"))))
     (mode-line ((t (:foreground "#191515" :background "#74798b"))))
     (region ((t (:background "#dddee4"))))
     (font-lock-builtin-face ((t (:foreground "#848db8"))))
     (font-lock-comment-face ((t (:foreground "#459235"))))
     (font-lock-function-name-face ((t (:foreground "#d5e8fc"))))
     (font-lock-keyword-face ((t (:foreground "#51789e"))))
     (font-lock-string-face ((t (:foreground "#afd4f8"))))
     (font-lock-type-face ((t (:foreground"#2b9915"))))
     (font-lock-variable-name-face ((t (:foreground "#a6b0b9"))))
     (minibuffer-prompt ((t (:foreground "#97a6b5" :bold t))))
     (font-lock-warning-face ((t (:foreground "Red" :bold t))))
     )))
(provide 'mc-dark)
