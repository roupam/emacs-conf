(defun mc-theme ()
  (interactive)
  (color-theme-install
   '(mc-theme
      ((background-color . "#cfe4e1")
      (background-mode . light)
      (border-color . "#f7f7f8")
      (cursor-color . "DarkGrey")
      (foreground-color . "#000000")
      (mouse-color . "black"))
     (fringe ((t (:background "#f7f7f8"))))
     (mode-line ((t (:foreground "#ffffff" :background "#000000"))))
     (region ((t (:background "LightGrey"))))
     (font-lock-builtin-face ((t (:foreground "#100f0f"))))
     (font-lock-comment-face ((t (:foreground "#2c3558"))))
     (font-lock-function-name-face ((t (:foreground "#2e3038"))))
     (font-lock-keyword-face ((t (:foreground "#413342"))))
     (font-lock-string-face ((t (:foreground "#262831"))))
     (font-lock-type-face ((t (:foreground"#0f1833"))))
     (font-lock-variable-name-face ((t (:foreground "#1c1f26"))))
     (minibuffer-prompt ((t (:foreground "#252b3c" :bold t))))
     (font-lock-warning-face ((t (:foreground "Red" :bold t))))
     )))
(provide 'mc-theme)
